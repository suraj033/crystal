
@{
    ViewBag.Title = "blogcommentlist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    TempData["comment_page"] = "class=" + "active";
    TempData["blogcommentlist_in"] = "in";
    var info = Model;
}
@if (TempData["MSG"] != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
        <strong>@TempData["MSG"]</strong>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div style="background: transparent; border: 0; box-shadow: none !important" class="tab-content pan mtl mbn responsive hidden-xs hidden-sm">
                <div id="tab-two-columns">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-grey">
                                <table class="table table-hover table-striped table-bordered table-advanced tablesorter tb-sticky-header" style="padding: 0px;">
                                    <thead class="tableFloatingHeaderOriginal" style="position: static; top: 0px; margin-top: 0px; left: 286px; z-index: 1; width: 1026px;">
                                        <tr>
                                            <th>Sr No</th> 
                                            <th>Name</th>
                                            <th>Comment Date</th>
                                            <th>Comment</th>
                                            <th>status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (crystalthoughts.Models.Account_Data i in ViewBag.commentlist)
                                        {
                                            <tr>
                                                <td>@i.comment_id</td>
                                                
                                                <td>@i.Name</td>
                                                <td>@i.Date</td>
                                                <td>@i.comment</td>
                                                <td>
                                                    @if (i.Status == "True")
                                                    {
                                                        <p>Active</p>
                                                    }
                                                    else
                                                    {
                                                        <p>De-Active</p>
                                                    }
                                                </td>
                                                @if (i.Status == "True")
                                                {
                                                    <td>
                                                        <a href="/admin/deactiveblogcomment/@i.comment_id" class="btn btn-warning btn-xs">
                                                            <i class="fa fa-edit"></i>&nbsp; DeActive
                                                        </a>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <a href="/admin/activeblogcomment/@i.comment_id" class="btn btn-warning btn-xs">
                                                            <i class="fa fa-edit"></i>&nbsp; Active
                                                        </a>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>