
@{
    ViewBag.Title = "bloglist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    TempData["blog"] = "class=" + "active";
    TempData["bloglist"] = "class=" + "active";
    TempData["bloglist_in"] = "in";
    var info = Model;
}
<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-blue">
                <div class="panel-heading">
                    <a href="/admin" class="btn btn-grey gtb btn-xs" style="float:right;margin-right:10px">GO BACK</a>
                    Blog List
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table id="table_id" class="table table-hover table-striped table-bordered tablesorter">
                                    <thead>
                                        <tr>
                                            <th style="width:10%">Srno</th>
                                            <th style="width:10%">Image/Video</th>
                                            <th style="width:10%">Title</th>
                                            <th style="width:10%">Date</th>
                                            <th style="width:10%">Status</th>
                                            <th style="width:10%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.bloglist != null)
                                        {
                                            foreach (crystalthoughts.Models.blogdata i in ViewBag.bloglist)
                                            {
                                                <tr>
                                                    <td>@i.blogid</td>
                                                    <td>
                                                        @if (i.videourl != "")
                                                        {
                                                            <iframe width="100" height="100" src="@i.videourl" allowfullscreen></iframe>
                                                        }
                                                        else
                                                        {
                                                            <img src="@i.image.Replace("~","")" />
                                                        }
                                                    </td>
                                                    <td>@i.title</td>
                                                    <td>@i.blogdate</td>
                                                    <td>@i.status</td>
                                                    <td style="width: 93px">
                                                        <a href="/admin/blog/@i.blogid" class="btn btn-success"><span style="color:black">Edit</span></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
    {
    <script src="/admin_assets/vendors/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="/admin_assets/vendors/DataTables/media/js/dataTables.bootstrap.js"></script>
    <script src="/admin_assets/vendors/DataTables/extensions/TableTools/js/dataTables.tableTools.min.js"></script>
    <script src="/admin_assets/js/table-datatables.js"></script>
}