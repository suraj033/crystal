                                    <div class="blog-post-img">
                                        <img src="@i.image.Replace("~","")" alt="blog image">
                                    </div>
                                }
                                else
                                {
                                    <iframe width="767" height="315" src="https://www.youtube.com/embed/"@i.videourl allowfullscreen></iframe>
                                }
                                <p>@Html.Raw(i.discription)</p>
